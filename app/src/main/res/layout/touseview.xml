<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:text="apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:id="@+id/view_chk1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_chk2"
        android:layout_below="@+id/view_chk1"
        android:layout_alignLeft="@+id/view_chk1"
        android:layout_alignStart="@+id/view_chk1" />

    <Button
        android:text="clearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearnBtn"
        android:layout_weight="1"
        android:layout_below="@+id/view_chk2"
        android:layout_alignLeft="@+id/view_chk2"
        android:layout_alignStart="@+id/view_chk2"
        android:layout_marginTop="19dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_rdg"
        android:layout_below="@+id/clearnBtn"
        android:layout_alignRight="@+id/view_chk1"
        android:layout_alignEnd="@+id/view_chk1">

        <RadioButton
            android:text="item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_chk2"
            android:layout_alignLeft="@+id/view_chk2"
            android:layout_alignStart="@+id/view_chk2"
            android:layout_marginTop="54dp"
            android:id="@+id/view_rdb1"
            android:layout_weight="1" />

        <RadioButton
            android:text="item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_rdb1"
            android:layout_alignRight="@+id/view_rdb1"
            android:layout_alignEnd="@+id/view_rdb1"
            android:id="@+id/view_rdb2"
            android:layout_weight="1" />

    </RadioGroup>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_rdg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/spinner" />

    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/clearnBtn"
        android:layout_alignStart="@+id/clearnBtn"
        android:layout_marginTop="26dp"
        android:id="@+id/submitBtn" />
</RelativeLayout>